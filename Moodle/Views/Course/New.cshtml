@model Moodle.Models.Course

@{
    ViewBag.Title = "New course";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("New", "Course", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.TextBoxFor(c => c.Name)
    @Html.DropDownListFor(c => c.ProfessorId, new SelectList(Model.ProfessorsList, "Value", "Text"), "Choose a professor", new { @class = "form-control" })

    @Html.LabelFor(c => c.StudentsList, "Choose students to add:")
    <br />
    for (int i = 0; i < Model.StudentsList.Count(); i++)
    {
        @Html.HiddenFor(c => c.StudentsList[i].Id)
        @Html.HiddenFor(c => c.StudentsList[i].Name)
        @Html.CheckBoxFor(c => c.StudentsList[i].Checked)
        @Html.DisplayFor(c => c.StudentsList[i].Name)
        <br />
    }
    <br />

    <input type="submit" value="Create" class="btn btn-default" />
}